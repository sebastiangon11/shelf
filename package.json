{
  "name": "shelf",
  "version": "0.1.0",
  "private": true,
  "productName": "Shelf",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "export BROWSER=none && react-scripts start",
    "start-electron": "export ELECTRON_START_URL=http://localhost:3000 && electron ./build/electron/main.js",
    "build": "react-scripts build",
    "build-electron": "tsc --project ./electron/tsconfig.json  --outDir build/electron && mkdir -p build/src/shared/assets && cp -r src/shared/assets/. build/src/shared/assets",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package:mac": "electron-builder build --mac -c.extraMetadata.main=build/electron/main.js --publish never",
    "package:win": "electron-builder build --win -c.extraMetadata.main=build/electron/main.js --publish never",
    "dist:mac": "npm run build && npm run build-electron && npm run package:mac",
    "dist:win": "npm run build && npm run build-electron && npm run package:win",
    "pack": "electron-builder --dir build --mac --win -c.extraMetadata.main=build/electron/main.js --publish never",
    "lint": "eslint"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.50",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/uuid": "^8.0.0",
    "clsx": "^1.1.1",
    "draft-js": "^0.11.6",
    "draft-js-autolist-plugin": "^3.0.0",
    "draft-js-image-plugin": "^2.0.7",
    "draft-js-plugins-editor": "^3.0.0",
    "draft-js-static-toolbar-plugin": "^3.0.1",
    "electron-settings": "^4.0.2",
    "lodash.debounce": "^4.0.8",
    "menubar": "^9.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "react-test-renderer": "^16.13.1",
    "typescript": "^3.7.5",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0",
    "electron-debug": "^3.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.shelf.app",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github",
      "repo": "electron-cra-example",
      "owner": "johndyer24"
    }
  }
}
